{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs",                     
      "lib": ["es6"],                             
      "allowJs": true,                       
      "outDir": "./dist",                        
      "rootDir": "./src",                       
      "removeComments": true, 
      "noImplicitAny": true,               
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],                          
      "esModuleInterop": true,                  
      "resolveJsonModule": true,
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true,         
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@database/*": ["./src/database/*"],
        "@router/*": ["./src/router/*"],
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
  }